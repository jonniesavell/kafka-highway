{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://localhost:8082/catalog/canonical-product-v1.schema.json",
  "title": "CanonicalProductV1",
  "type": "object",
  "additionalProperties": false,
  "required": ["productId", "status", "title", "slug", "categoryPath", "variants", "createdAt", "updatedAt"],
  "properties": {
    "productId": { "$ref": "http://localhost:8082/common/identifiers.schema.json#/$defs/uuid" },
    "status": { "type": "string", "enum": ["DRAFT", "ACTIVE", "ARCHIVED"] },
    "title": { "type": "string", "minLength": 1, "maxLength": 200 },
    "slug": { "$ref": "http://localhost:8082/common/identifiers.schema.json#/$defs/slug" },
    "brand": { "type": "string", "maxLength": 120 },
    "categoryPath": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "maxLength": 80 }
    },
    "tags": { "type": "array", "items": { "type": "string", "maxLength": 60 }, "uniqueItems": true },
    "description": { "type": "string", "maxLength": 10000 },
    "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri", "maxLength": 500 } },
    "variants": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "http://localhost:8082/catalog/variant-v1.schema.json" }
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
